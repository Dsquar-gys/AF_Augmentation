<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AF_Augmentation.App"
			 xmlns:local="using:AF_Augmentation">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>
	
    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="/Controls/GridElementControl.axaml"></StyleInclude>
		<StyleInclude Source="/Controls/AnimatedPopup.axaml"></StyleInclude>
		<StyleInclude Source="/Controls/ChooseEffectButton.axaml"></StyleInclude>
    </Application.Styles>
	
	<Application.Resources>
		
		<SolidColorBrush x:Key="DarkBlueBrush">#48577D</SolidColorBrush>
		<SolidColorBrush x:Key="MidBlueBrush">#7690CF</SolidColorBrush>
		<SolidColorBrush x:Key="LightBlueBrush">#D3DCF2</SolidColorBrush>
		<SolidColorBrush x:Key="LightGrayBrush">#9197A6</SolidColorBrush>
		<SolidColorBrush x:Key="DarkGrayBrush">#43464C</SolidColorBrush>
		
	</Application.Resources>
	
</Application>